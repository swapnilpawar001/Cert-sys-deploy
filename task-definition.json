{
  "family": "certificate-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "certificate-container",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/certificate-system:latest",
      "portMappings": [
        {
          "containerPort": 5000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "SECRET_KEY",
          "value": "your-super-secret-key-change-this"
        },
        {
          "name": "ADMIN_USERNAME",
          "value": "admin"
        },
        {
          "name": "ADMIN_PASSWORD",
          "value": "SecurePassword123!"
        },
        {
          "name": "FLASK_ENV",
          "value": "production"
        },
        {
          "name": "FLASK_DEBUG",
          "value": "False"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/certificate-system",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:5000/api/check-status || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}